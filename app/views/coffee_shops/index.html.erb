<% if params[:location].present? %>

  <h1>Independently Owned Coffee Shops in Your Area</h1><br><br>
  <% @local_coffee_shops.each do |cs| %>

  <div><%= link_to cs.name, cs.url %></div><br>
  <div><%= cs.location.display_address %></div><br><br>
  <% end %>

<% else %>

  <%= form_tag coffee_shops_path, method: :get do %>
  <!-- forms usually submit as post you have to specify get bc its diff (get) -->
  <!-- form_tag doesnt provide a temp variable -->
  <!-- non-model aware form bc css is only-->
    <%= label_tag :location, 'Location' %>
    <%= text_field_tag :location %>

    <%= submit_tag %>
  <% end %>

<% end %>





